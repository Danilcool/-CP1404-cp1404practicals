BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            multiline: False

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.add_value(input_number.text)
            Button:
                text: 'Down'
                on_press: app.reduce_value(input_number.text)

    Button:
        id: convert_button
        text: 'Convert Miles to Kilometres Converter'
        on_press: app.convert_miles_to_km(input_number.text)
    Label:
        id: kilometers_value
        font_size: 48
        text: ""
        color: 1, 0.4, 0.52, 1